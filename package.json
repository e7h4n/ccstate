{
  "name": "ccstate-monorepo",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e7h4n/ccstate.git"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "fix": "pnpm '/^fix:.*/'",
    "fix:format": "prettier '**/*' --ignore-unknown --write",
    "fix:lint": "eslint . --fix",
    "test": "vitest --coverage --run",
    "bench": "vitest bench --run",
    "build": "pnpm build:lib && pnpm build:babel && pnpm build:react && pnpm build:vue",
    "build:lib": "pnpm -F ccstate build",
    "build:babel": "pnpm -F ccstate-babel build",
    "build:react": "pnpm -F ccstate-react build",
    "build:vue": "pnpm -F ccstate-vue build",
    "build:solid": "pnpm -F ccstate-solid build",
    "lint": "pnpm '/^lint:.*/'",
    "lint:type": "pnpm -F ccstate exec tsc --noEmit && pnpm -F ccstate-babel exec tsc --noEmit",
    "lint:eslint": "eslint .",
    "lint:format": "prettier '**/*' --ignore-unknown --list-different",
    "ci:version": "changeset version && pnpm lint-staged",
    "ci:publish": "pnpm publish:lib; pnpm publish:babel; pnpm publish:react; pnpm publish:vue; pnpm publish:solid; echo 0",
    "publish:lib": "cd packages/ccstate/dist && pnpm publish",
    "publish:babel": "cd packages/babel/dist && pnpm publish",
    "publish:react": "pnpm -F ccstate-react publish",
    "publish:vue": "pnpm -F ccstate-vue publish",
    "publish:solid": "pnpm -F ccstate-solid publish",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@vitest/browser": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "2.1.8",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "tsconfig-moon": "^1.3.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vitest": "^2.1.8"
  },
  "pnpm": {
    "packageExtensions": {
      "@testing-library/vue": {
        "dependencies": {
          "type-fest": "~2.19"
        }
      }
    }
  }
}
