{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "composite": false,
    "noEmit": true,
    /* Linting */
    "strict": true
  },
  "include": ["src", "types", "__bench__", "vitest.config.ts"]
}
