{
  "name": "rippling-monorepo",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e7h4n/rippling.git"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "fix": "pnpm '/^fix:.*/'",
    "fix:format": "prettier '**/*' --ignore-unknown --write",
    "fix:lint": "eslint . --fix",
    "test": "vitest --run --coverage && pnpm vitest bench --run",
    "build": "pnpm build:lib && pnpm build:babel && pnpm build:devtools",
    "build:lib": "pnpm -F rippling build",
    "build:devtools": "pnpm -F rippling-devtools build",
    "build:babel": "pnpm -F rippling-babel build",
    "lint": "pnpm '/^lint:.*/'",
    "lint:type": "pnpm -F rippling exec tsc --noEmit && pnpm -F rippling-babel exec tsc --noEmit",
    "lint:eslint": "eslint .",
    "lint:format": "prettier '**/*' --ignore-unknown --list-different",
    "ci:version": "changeset version && pnpm lint-staged",
    "ci:publish": "pnpm publish:lib; pnpm publish:babel",
    "publish:lib": "cd packages/rippling/dist && pnpm publish",
    "publish:babel": "cd packages/babel/dist && pnpm publish",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "2.1.8",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "tsconfig-moon": "^1.3.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vitest": "^2.1.8"
  }
}
