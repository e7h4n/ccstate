{
  "name": "rippling",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e7h4n/rippling.git"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "format": "prettier '**/*.{js,json,md,ts,tsx,md,mdx}' --write",
    "test": "pnpm '/^test:.*/'",
    "test:unit": "vitest --run --coverage",
    "test:lint": "eslint .",
    "test:format": "prettier '**/*.{js,json,md,ts,tsx,md,mdx}' --list-different",
    "test:bench": "vitest bench --run",
    "test:e2e": "playwright test e2e",
    "build": "pnpm '/^build:.*/'",
    "build:lib": "pnpm -F '!devtools' exec rollup -c",
    "build:devtools": "pnpm -F devtools exec vite build",
    "prebuild": "pnpm -F '*' shx rm -rf dist",
    "dev:devtools": "pnpm -F devtools exec vite build --watch"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@changesets/cli": "^2.27.10",
    "@codspeed/vitest-plugin": "^3.1.1",
    "@playwright/test": "^1.49.0",
    "@preact/signals": "^1.3.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/chrome": "^0.0.287",
    "@types/node": "^22.9.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/browser": "^2.1.6",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "2.1.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.10.0",
    "eslint-plugin-vitest": "^0.5.4",
    "happy-dom": "^15.11.7",
    "jest-leak-detector": "^29.7.0",
    "jotai": "^2.10.3",
    "json": "^11.0.0",
    "playwright": "^1.49.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-json-view": "^1.21.3",
    "rollup": "^4.22.0",
    "rollup-plugin-dts": "^6.1.1",
    "shx": "^0.3.4",
    "signal-timers": "^1.0.4",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.3",
    "vitest": "^2.1.5"
  }
}
